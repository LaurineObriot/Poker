					p {{seats[5].name}}
					p {{seats[5].chips}}
		.double_cell
		.cell
			.player_wrap(ng-show="!sitting_in || seats[2].name")
				.sit_in(ng-show="!seats[2].name", ng-click="show_buy_in_modal=true; seat=2;") Sit In
				.player_content(ng-show="seats[2].name")
					p {{seats[2].name}}
					p {{seats[2].chips}}
	.row
		.cell
		.cell
			.player_wrap(ng-show="!sitting_in || seats[4].name")
